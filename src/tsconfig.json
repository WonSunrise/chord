{
    "$schema": "https://schemastore.azurewebsites.net/schemas/json/tsconfig.json",
    "compilerOptions": {
        "noEmit": false,
        "module": "amd",
        "moduleResolution": "classic",
        "noImplicitAny": false,
        "removeComments": false,
        "preserveConstEnums": true,
        "target": "es5",
        "sourceMap": false,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "declaration": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "jsx": "react",
        "lib": [
            "es2015",
            "dom",
            "es2017.string"
        ],
        "baseUrl": ".",
        "paths": {
            "*": [
                "*",
                "./typings/*"
            ]
        }
    },
    "exclude": [
        "../out"
    ]
}
